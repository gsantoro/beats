{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch filebeat",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "cwd": "${workspaceFolder}/filebeat",
            "program": "${workspaceFolder}/filebeat/main.go",
            "args": [
                "-c",
                "${workspaceFolder}/dev-tools/telepresence/filebeat/home/filebeat.yml",
                "--path.data",
                "${workspaceFolder}/dev-tools/telepresence/filebeat/home/data",
                "--path.logs",
                "${workspaceFolder}/dev-tools/telepresence/filebeat/home/logs",
                "-e"
            ],
            "envFile": "${workspaceFolder}/dev-tools/telepresence/filebeat/.env"
        }
    ]
}
